#! /bin/sh
# mind-config.  Generated from mind-config.in by configure.


prefix=/usr/local
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
    cat  <<EOF
Usage: clhep-config [OPTION]

Known values for OPTION are:

  --prefix              show installation prefix
  --cxx                 print C++ compilation command
  --cc                  print C compilation command
  --cpp                 print pre-processor commands
  --include             print include path
  --ldflags             print linker flags
  --libs                print libraries to link against
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*)
        optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) 
        optarg=
	;;
    esac

    case "$1" in
    --prefix)
	echo /usr/local
	;;

    --version)
	echo  v0r1p0
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxx)
       	echo g++ -g -Wall -I/data/neutrino05/phallsjo/third_party/recpack-install/include -I"/data/neutrino05/phallsjo/third_party/install/clhep-2.1.4.1/include" -I/data/neutrino05/phallsjo/third_party/bhep-install/include -I/data/neutrino05/phallsjo/third_party/root/include
       	;;

    --cc)
       	echo gcc -g -O2
       	;;

    --cpp)
       	echo "CPP:    " gcc -E 
       	echo "CXXCPP: " g++ -E 
       	;;

    --include)
       	echo -I/usr/local/include
       	;;

    --ldflags)
       	echo   -L/data/neutrino05/phallsjo/third_party/root/lib -L/data/neutrino05/phallsjo/third_party/recpack-install/lib -L/data/neutrino05/phallsjo/third_party/bhep-install/lib -L"/data/neutrino05/phallsjo/third_party/install/clhep-2.1.4.1"/lib 
       	;;

    --libs)
       	echo -L/usr/local/lib -lmind -lrecpack -lCLHEP -lbhep -lg2c -lm  -L/data/neutrino05/phallsjo/third_party/root/lib -lCore -lCint -lRIO -lNet -lHist -lGraf -lGraf3d -lGpad -lTree -lRint -lPostscript -lMatrix -lPhysics -lMathCore -lThread -pthread -lm -ldl -rdynamic -L/data/neutrino05/phallsjo/third_party/recpack-install/lib -lrecpack -lg2c -lm -L/data/neutrino05/phallsjo/third_party/root/lib -lCore -lCint -lRIO -lNet -lHist -lGraf -lGraf3d -lGpad -lTree -lRint -lPostscript -lMatrix -lPhysics -lMathCore -lThread -pthread -lm -ldl -rdynamic -L/data/neutrino05/phallsjo/third_party/install/clhep-2.1.4.1/lib -lCLHEP-2.1.4.1 -L/data/neutrino05/phallsjo/third_party/bhep-install/lib -lbhep -lg2c -lm -L"/data/neutrino05/phallsjo/third_party/install/clhep-2.1.4.1/lib" -lCLHEP-2.1.4.1
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
